{% extends 'base.html.twig' %}
{# modifications HEAD #}
{% block title %} Promo detail   - Annuaire Wellness {% endblock %}
{# fin modifications HEAD #}

{% block document_title %}
    <div class="document-title">
        <h1>{% block document_title_h1 %}Detail d'une promotion {% endblock %}</h1>

    </div><!-- /.document-title -->
{% endblock %}

{% block body %}
    <div class="page-title">
        <h1>{{ promos.nom }}</h1>
    </div>

    <div class="posts post-detail">
        Description:
        <div class="post-content">
            {{ promos.description }}
        </div>
        <div class="post-meta clearfix">
            <div class="post-meta-author">
                Propos√© par
                <a href="{{ path('prestataire_detail', {'slug':promos.prestataire.slug}) }}">{{ promos.prestataire.nom }}</a>
            </div>
            <div class="post-meta-date">{{ promos.debut|date("m/d/Y") }}</div>
            <div class="post-meta-date">{{ promos.fin|date("m/d/Y") }}</div>
            <div class="post-meta-categories">
                <i class="fa fa-tags"></i>
                <a href="{{ path('service_detail', {'slug':promos.categorie.slug}) }}">{{ promos.categorie.nom }}</a>
            </div>
            <div class="post-meta-comments">

            </div>
        </div>

    </div> <!-- posts post-detail -->
{% endblock %}
